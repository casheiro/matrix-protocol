# Matrix Protocol - Environment Variables
# Copy this file to .env and configure for your environment

# ==============================================
# BASE CONFIGURATION
# ==============================================

# Site URL - Base URL for the application
# Used for generating absolute URLs and schema URLs
# Development: http://localhost:3000
# Production: https://matrix-protocol.org
SITE_URL=http://localhost:3000

# Node Environment
# Values: development, staging, production
NODE_ENV=development

# ==============================================
# SCHEMA CONFIGURATION
# ==============================================

# Schema Base URL - Override for schema URLs
# If not set, will be automatically generated from SITE_URL
# Development: http://localhost:3000/schemas
# Production: https://matrix-protocol.org/schemas
# SCHEMA_BASE_URL=

# ==============================================
# SERVER CONFIGURATION  
# ==============================================

# Nitro Server Configuration
NITRO_HOST=localhost
NITRO_PORT=3000

# ==============================================
# EXTERNAL SERVICES
# ==============================================

# GitHub Repository URL
GITHUB_URL=https://github.com/casheiro/matrix-protocol

# Discord Community URL  
DISCORD_URL=https://discord.gg/Gd7BxsRhB4

# ==============================================
# DEVELOPMENT OPTIONS
# ==============================================

# Enable schema processing debug logs
# Values: true, false
DEBUG_SCHEMAS=false

# Force schema URL regeneration on build
# Values: true, false  
FORCE_SCHEMA_REBUILD=false